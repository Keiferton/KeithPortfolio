---
const { title = "Keith Curry", description = "Portfolio" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/kc-favicon.svg" />

    <!-- <model-viewer> for GLB previews -->
    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
  </head>

  <body class="min-h-screen bg-white text-zinc-900">
    <!-- HEADER -->
    <header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b">
      <nav class="mx-auto max-w-6xl px-4 py-3 flex items-center gap-3">
        <!-- Brand / Home -->
        <a href="/" aria-label="Home" title="Home" class="flex items-center gap-2 p-2 rounded-lg hover:bg-zinc-100">
          <img src="/kc-favicon.svg" alt="KC Logo" class="w-10 h-10" />
          <span class="font-semibold hidden sm:inline"></span>
        </a>

        <!-- Desktop nav -->
        <div class="hidden sm:flex items-center gap-6">
          <a href="/projects">Projects</a>
          <a href="/designs">Designs</a>
          <a href="/community">Community & Events</a>
          <a href="/side-quests">Side Quests</a>
          <a href="/about">About</a>
        </div>

        <!-- Spacer -->
        <div class="ml-auto"></div>

        <!-- Icons (always visible) -->
        <div class="flex items-center gap-2">
          <!-- GitHub -->
          <a
            href="https://github.com/Keiferton"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            title="GitHub"
            class="p-2 rounded-lg hover:bg-zinc-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                 class="w-5 h-5 text-zinc-700">
              <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"
                d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336 9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z"/>
            </svg>
          </a>

          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/in/keithcurrysf/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            title="LinkedIn"
            class="p-2 rounded-lg hover:bg-zinc-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                 class="w-5 h-5 text-zinc-700">
              <circle cx="4.983" cy="5.009" r="2.188" fill="currentColor"></circle>
              <path d="M9.237 8.855v12.139h3.769v-6.003c0-1.584.298-3.118 2.262-3.118 1.937 0 1.961 1.811 1.961 3.218v5.904H21v-6.657c0-3.27-.704-5.783-4.526-5.783-1.835 0-3.065 1.007-3.568 1.96h-.051v-1.66H9.237zm-6.142 0H6.87v12.139H3.095z"
                    fill="currentColor"></path>
            </svg>
          </a>

          <!-- Mobile menu button -->
          <button
            id="nav-toggle"
            class="sm:hidden p-2 rounded-lg hover:bg-zinc-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
            aria-label="Open menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
            type="button"
          >
            <!-- Hamburger icon -->
            <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 7h16M4 12h16M4 17h16"/>
            </svg>
            <!-- Close icon (hidden by default) -->
            <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 hidden" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </nav>

      <!-- Mobile menu (hidden on >= sm) -->
      <div id="mobile-menu" class="sm:hidden hidden border-t">
        <div class="mx-auto max-w-6xl px-4 py-3 grid gap-3">
          <a href="/projects" class="py-2">Projects</a>
          <a href="/designs" class="py-2">Designs</a>
          <a href="/community" class="py-2">Community & Events</a>
          <a href="/side-quests" class="py-2">Side Quests</a>
          <a href="/about" class="py-2">About</a>
        </div>
      </div>
    </header>

    <!-- MAIN -->
    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="mx-auto max-w-6xl px-4 py-10 text-sm text-zinc-500">
      <div class="flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
        <div class="space-y-1 text-center sm:text-left">
          <p>Â© {new Date().getFullYear()} Keith Curry</p>
          <p>Last updated {new Date().toISOString().slice(0,10)}</p>
        </div>

        <!-- stacked on mobile, row on desktop -->
        <div class="flex flex-col items-center gap-3 text-center sm:flex-row sm:items-center sm:gap-5 sm:text-left">
          <a href="mailto:kcurry@keifh.com" class="underline">Email</a>
          <a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="underline">Resume</a>
          <a href="/cv.pdf" target="_blank" rel="noopener noreferrer" class="underline">Curriculum Vitae (CV)</a>

          <!-- GitHub (icon + label) -->
          <a
            href="https://github.com/Keiferton"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            title="GitHub"
            class="inline-flex items-center gap-2 p-2 rounded-lg hover:bg-zinc-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                 class="w-5 h-5 text-zinc-700">
              <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"
                d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336 9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z"/>
            </svg>
            <span>GitHub</span>
          </a>

          <!-- LinkedIn (icon + label) -->
          <a
            href="https://www.linkedin.com/in/keithcurrysf/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            title="LinkedIn"
            class="inline-flex items-center gap-2 p-2 rounded-lg hover:bg-zinc-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                 class="w-5 h-5 text-zinc-700">
              <circle cx="4.983" cy="5.009" r="2.188" fill="currentColor"></circle>
              <path d="M9.237 8.855v12.139h3.769v-6.003c0-1.584.298-3.118 2.262-3.118 1.937 0 1.961 1.811 1.961 3.218v5.904H21v-6.657c0-3.27-.704-5.783-4.526-5.783-1.835 0-3.065 1.007-3.568 1.96h-.051v-1.66H9.237zm-6.142 0H6.87v12.139H3.095z"
                    fill="currentColor"></path>
            </svg>
            <span>LinkedIn</span>
          </a>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle script -->
    <script>
      const btn = document.getElementById('nav-toggle');
      const menu = document.getElementById('mobile-menu');
      const iconOpen = document.getElementById('icon-open');
      const iconClose = document.getElementById('icon-close');

      if (btn && menu && iconOpen && iconClose) {
        btn.addEventListener('click', () => {
          const isOpen = menu.classList.toggle('hidden') === false; // hidden removed => open
          btn.setAttribute('aria-expanded', String(isOpen));
          iconOpen.classList.toggle('hidden', isOpen);
          iconClose.classList.toggle('hidden', !isOpen);
        });
      }
    </script>
  </body>
</html>
